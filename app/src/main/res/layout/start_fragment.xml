<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.start.StartFragment">

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin16dp"
        android:textAlignment="center"
        android:textAppearance="@style/Text.50sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/buttonCounter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10" />

    <Button
        android:id="@+id/buttonCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin16dp"
        android:background="@color/colorAccent"
        android:padding="@dimen/padding16dp"
        android:text="@string/fragment_start_button_counter"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
